{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ChangeSet",
  "type": "object",
  "required": ["id", "intent", "timestamp", "changes", "metadata"],
  "properties": {
    "id": { "type": "string", "pattern": "^chg-[A-Za-z0-9\\-]+$" },
    "intent": { "type": "string", "minLength": 3 },
    "timestamp": { "type": "string", "format": "date-time" },
    "request_context": {
      "type": "object",
      "properties": {
        "tenant_id": { "type": "string" },
        "requested_by": { "type": "string" },
        "role": { "type": "string" }
      },
      "required": ["tenant_id", "requested_by", "role"]
    },
    "changes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["action", "service"],
        "properties": {
          "action": { "type": "string", "enum": ["enable", "disable", "scale", "update", "replace", "delete"] },
          "service": { "type": "string" },
          "version": { "type": "string" },
          "config": {
            "type": "object",
            "additionalProperties": true
          },
          "reason": { "type": "string" }
        }
      }
    },
    "impacted_services": {
      "type": "array",
      "items": { "type": "string" }
    },
    "metadata": {
      "type": "object",
      "required": ["confidence", "risk"],
      "properties": {
        "intent_type": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "risk": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
        "source": { "type": "string" },
        "validator_status": { "type": "string", "enum": ["pending", "validated", "rejected", "requires_human"] },
        "notes": { "type": "string" }
      }
    }
  },
  "additionalProperties": false
}
